@host = http://localhost:5000
@contentType = application/json
@token = {{login.response.body.token}}

### Login to get token
# @name login
POST {{host}}/api/Auth/login
Content-Type: {{contentType}}

{
  "email": "admin@example.com",
  "password": "Admin@123"
}

### Get all tape colors
GET {{host}}/api/TapeColor
Authorization: Bearer {{token}}
Accept: {{contentType}}

### Create a new tape color
# @name createTapeColor
POST {{host}}/api/TapeColor
Authorization: Bearer {{token}}
Content-Type: {{contentType}}

{
  "tapeColor": "Red Tape",
  "colorCode": "RED001",
  "shortCode": "RT"
}

### Get a specific tape color by ID
GET {{host}}/api/TapeColor/1
Authorization: Bearer {{token}}
Accept: {{contentType}}

### Update a tape color
PUT {{host}}/api/TapeColor/1
Authorization: Bearer {{token}}
Content-Type: {{contentType}}

{
  "tapeColor": "Blue Tape",
  "colorCode": "BLU001",
  "shortCode": "BT",
  "isActive": true
}

### Delete a tape color
DELETE {{host}}/api/TapeColor/1
Authorization: Bearer {{token}}

### Search tape colors
GET {{host}}/api/TapeColor/search?tapeColor=Blue
Authorization: Bearer {{token}}
Accept: {{contentType}}